<!DOCTYPE html>
<html>
<head>
  <title>BootstrapLessonPrep</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<meta name="viewport" contents="width=device-width, intitial-scale=1">

</head>
<body>

<div class="container">

	<% if current_user %>
		<ul class="nav nav-pills">
			<li><%= link_to current_user.name, user_path(current_user) %></li>
			<li role="presentation"><%= link_to 'My Characters', user_characters_path(current_user) %></li>
			<li role="presentation"><%= link_to 'Add a New Character',new_user_character_path(current_user) %></li>
			<li role="presentation"><%= link_to 'All Characters', root_path %></li>
			<li><%= link_to 'Log Out', logout_path, method: :delete %></li>
		</ul>
	<% else %>
		<%= link_to 'Log In', login_path, :class => 'btn btn-default' %>
		<%= link_to 'Sign Up', new_user_path, :class => 'btn btn-default' %>
	<% end %>


	<%= yield %>

</div>

</body>
</html>
